<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">
    <link href="~/fonts/Byekan/ByekanFont.css" rel="stylesheet" />
    <!-- Favicons -->
    <link href="~/Content/SinglePage/img/favicon.png" rel="icon">
    <link href="~/Content/SinglePage/img/apple-touch-icon.png" rel="apple-touch-icon">

   
    <!-- Bootstrap CSS File -->
    <link href="~/Content/SinglePage/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Libraries CSS Files -->
    <link href="~/Content/SinglePage/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/SinglePage/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/Content/SinglePage/lib/ionicons/css/ionicons.min.css" rel="stylesheet">
    <link href="~/Content/SinglePage/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/Content/SinglePage/lib/lightbox/css/lightbox.min.css" rel="stylesheet">

    <!-- Main Stylesheet File -->
    <link href="~/Content/SinglePage/css/style.css" rel="stylesheet">

   
</head>

<body class="Persian-font" >

    <!--==========================
    Header
    ============================-->
    <header id="header" class="fixed-top Persian-font">
        <div class="container">

            <div class="logo float-left">
                <!-- Uncomment below if you prefer to use an image logo -->
                <!-- <h1 class="text-light"><a href="#header"><span>NewBiz</span></a></h1> -->
                <a href="#intro" class="scrollto"><img src="~/Content/SinglePage/img/logo.png" alt="" class="img-fluid"></a>
            </div>

            <nav class="main-nav float-right d-none d-lg-block">
                <ul>
                    <li  class="active"><a style="font-family:'Byekan'" href="@Url.Action("Index","Home")">خانه</a></li>
                    <li><a style="font-family:'Byekan'" href="@Url.Action("about","Home")">درباره ما</a></li>
                    <li><a style="font-family:'Byekan'" href="@Url.Action("Index","Home")">تماس با ما</a></li>
                    <li><a style="font-family:'Byekan'; color:white;text-decoration:none" data-toggle="modal" data-target="#signupModal" href="#team" class="btn btn-danger" >ثبت نام</a></li>
                    <li><a style="font-family:'Byekan'; color:white;text-decoration:none" data-toggle="modal" data-target="#signinModal" href="#team" class="btn btn-success">ورود</a></li>
                    
                </ul>
            </nav><!-- .main-nav -->

        </div>
    </header>
    <!-- #header -->

    @RenderBody()
   
    <!-- Modal -->
    <div class="modal fade" id="signupModal" style="text-align:right" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div style="background: linear-gradient(0deg, rgba(34,193,195,1) 0%, rgba(0,66,138,1) 100%);" class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">
                        
                    </h5>
                    <button type="button" class="close"  data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div style="direction:rtl;" class="modal-body">
                    <form>
                        <fieldset >
                            <div class="form-group">
                                <label for="mobile">موبایل</label>
                                <input type="text" id="mobile" class="form-control" placeholder="0912">
                            </div>
                            <div class="form-group">
                                <label for="password">
                                    رمز عبور
                                </label>
                                <input type="password" id="password" class="form-control" >
                            </div>
                            <div class="form-group">
                                <label for="repeatPassword">
                                    تکرار رمز عبور
                                </label>
                                <input type="password" id="repeatPassword" class="form-control" >
                            </div>
                            <button type="submit" class="btn btn-primary">ثبت نام</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Uncomment below i you want to use a preloader -->
    <!-- Modal -->
    <div class="modal fade" id="signinModal" style="text-align:right" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div style="background: linear-gradient(0deg, rgba(34,193,195,1) 0%, rgba(0,66,138,1) 100%);" class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">
                       
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div style="direction:rtl;" class="modal-body">
                    <form>
                        <fieldset>
                            <div class="form-group">
                                <label for="mobile">موبایل</label>
                                <input type="text" id="mobile" class="form-control" placeholder="0912">
                            </div>
                            <div class="form-group">
                                <label for="password">
                                    رمز عبور
                                </label>
                                <input type="password" id="password" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary">ورود</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <!-- <div id="preloader"></div> -->
    <!-- JavaScript Libraries -->
    <script src="~/Content/SinglePage/lib/jquery/jquery.min.js"></script>
    <script src="~/Content/SinglePage/lib/jquery/jquery-migrate.min.js"></script>
    <script src="~/Content/SinglePage/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/SinglePage/lib/easing/easing.min.js"></script>
    <script src="~/Content/SinglePage/lib/mobile-nav/mobile-nav.js"></script>
    <script src="~/Content/SinglePage/lib/wow/wow.min.js"></script>
    <script src="~/Content/SinglePage/lib/waypoints/waypoints.min.js"></script>
    <script src="~/Content/SinglePage/lib/counterup/counterup.min.js"></script>
    <script src="~/Content/SinglePage/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/Content/SinglePage/lib/isotope/isotope.pkgd.min.js"></script>
    <script src="~/Content/SinglePage/lib/lightbox/js/lightbox.min.js"></script>
    <!-- Contact Form JavaScript File -->
    <script src="~/Content/SinglePage/contactform/contactform.js"></script>

    <!-- Template Main Javascript File -->
    <script src="~/Content/SinglePage/js/main.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>











